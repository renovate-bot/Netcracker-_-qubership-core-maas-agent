      "enum": [
        "Min",
        "Max",
        "Disabled"
      ],
      "envSpecific": true,
      "examples": [
        "Max"
      ],
      "internal": true,
      "title": "The HPA_SCALING_DOWN_SELECT_POLICY scheme",
      "type": "string"
    },
    "HPA_SCALING_DOWN_STABILIZATION_WINDOW_SECONDS": {
